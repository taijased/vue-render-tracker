{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "Node",
        "declaration": true,
        "outDir": "dist",
        "rootDir": "src",
        "strict": true,
        "jsx": "preserve",
        "useDefineForClassFields": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "composite": true,
        "lib": ["ESNext", "DOM"],
        "paths": {
            "@/*": ["./src/*"]
        }
    },
    "include": ["src/**/*", "typings.d.ts", "auto-imports.d.ts"],
    "exclude": ["node_modules", "dist"]
}
